{
    "restartable": "rs",
    "ignore": [
        "client/*",
        "dist/*"
    ],
    "verbose": true,
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "server/*",
        "config/*"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json"
}
